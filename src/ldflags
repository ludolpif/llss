#!/bin/sh
SolutionDir="../"

solution=`${SolutionDir}ldflags`
project="-Wl,-rpath=.:.. -Wl,--export-dynamic -Wl,-Bsymbolic"
case $(uname -s) in
	Linux)      libdcimgui="-L${SolutionDir}lib/ui/ar" ;;
	Darwin)     libdcimgui="-L${SolutionDir}lib/ui/ar -L/usr/local/lib -L/opt/local/lib" ;;
	Windows_NT) libdcimgui="-L${SolutionDir}lib/ui/ar" ;;
	*)          echo "Unknown platform" >&2
esac
echo $solution $project $libdcimgui
